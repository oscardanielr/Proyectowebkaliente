{{>navigation_dos}}
<main>

  <!-- section works -->
  <br>
  <br>
  <br>
  <section id="section-works" class="section appear clearfix">
    <div class="container">
      <div class="row">
        <script data-ad-client="ca-pub-9549469569955328" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      </div>
      <div class="row mar-bot40">
        <div class="col-md-offset-3 col-md-6">
          <div class="section-header">

            <div class="container p-4">
              <div class="row">
                <div class="col">
                  {{#each eventos}}
                  <div class="col-md-3">
                    <div class="card text-center">
                      <div class="card-body">
                        
                          <h3 class="card-title text-uppercase">
                            {{titulo}}
                          </h3>
                      
                        <p class="m-2"> {{descripcion}}</p>
                        <img src="{{url}}" alt="imagen">
                       </div>
                    </div>
                  </div>
                  {{else}}
                   <div class="col-md-6 mx-auto">
                  <div class="card text-center">
                      <div class="card-body">
                        
                          <h3 class="card-title text-uppercase">
                            Aun no se tienen eventos publicados
                          </h3>
                      
                        <a href="/contactos">
                          <img src="/img/logo-kaliente.png" alt="">
                        </a>
                        
                       </div>
                    </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


</main>
